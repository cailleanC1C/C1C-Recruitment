# Bot token for the Discord application (masked in logs).
DISCORD_TOKEN=

# Environment label (influences watchdog defaults; default: dev).
ENV_NAME=

# Display name surfaced in telemetry (default: C1C-Recruitment).
BOT_NAME=

# Version string shown in embeds and logs (default: dev).
BOT_VERSION=

# Comma-separated guild IDs allowed to load the bot.
GUILD_IDS=

# Olson timezone used for embeds and scheduling (default: Europe/Vienna).
TIMEZONE=

# Optional daily refresh windows (HH:MM, comma separated; default: 02:00,10:00,18:00).
REFRESH_TIMES=

# Render sets this automatically; local runs fall back to 10000.
PORT=

# Python logging level (default: INFO).
LOG_LEVEL=

# Required for Discord channel logging. Leave blank to disable; startup emits a one-time warning.
LOG_CHANNEL_ID=

# Base64-encoded service-account JSON.
GSPREAD_CREDENTIALS=

# Legacy alias for GSPREAD_CREDENTIALS.
GOOGLE_SERVICE_ACCOUNT_JSON=

# Google Sheet ID for recruitment data.
RECRUITMENT_SHEET_ID=

# Google Sheet ID for onboarding trackers.
ONBOARDING_SHEET_ID=

# Back-compat sheet ID used when dedicated IDs are unset.
GOOGLE_SHEET_ID=

# Legacy alias checked when the other IDs are blank.
GSHEET_ID=

# Worksheet name containing recruitment config (default: Config).
RECRUITMENT_CONFIG_TAB=

# Worksheet name containing onboarding config (default: Config).
ONBOARDING_CONFIG_TAB=

# Fallback for the clans_tab worksheet when sheet config is missing (default: bot_info).
WORKSHEET_NAME=

# Default retry attempts for Sheets API requests (default: 5).
GSHEETS_RETRY_ATTEMPTS=

# Base delay (seconds) for Sheets exponential backoff (default: 0.5).
GSHEETS_RETRY_BASE=

# Multiplier for Sheets exponential backoff (default: 2.0).
GSHEETS_RETRY_FACTOR=

# TTL for cached worksheet values (default: 900).
SHEETS_CACHE_TTL_SEC=

# TTL for cached worksheet metadata; defaults to the sheet cache TTL.
SHEETS_CONFIG_CACHE_TTL_SEC=

# Elevated admin role IDs.
ADMIN_ROLE_IDS=

# Staff role IDs (welcome + refresh tools).
STAFF_ROLE_IDS=

# Recruiter role IDs (panels, digests).
RECRUITER_ROLE_IDS=

# Channel or thread receiving the Daily Recruiter Update.
REPORT_RECRUITERS_DEST_ID=

# Lead role IDs for escalations.
LEAD_ROLE_IDS=

# Optional list of Discord user IDs treated as admins.
ADMIN_IDS=

# Thread receiving recruitment updates.
RECRUITERS_THREAD_ID=

# Public welcome channel ID (optional).
WELCOME_GENERAL_CHANNEL_ID=

# Private welcome ticket channel ID.
WELCOME_CHANNEL_ID=

# Promo ticket channel ID.
PROMO_CHANNEL_ID=

# Fallback alert channel ID.
NOTIFY_CHANNEL_ID=

# Role pinged for urgent alerts.
NOTIFY_PING_ROLE_ID=

# same posts panels in the invoking channel; fixed routes to a dedicated thread (default: same).
PANEL_THREAD_MODE=

# Thread used when PANEL_THREAD_MODE=fixed.
PANEL_FIXED_THREAD_ID=

# Master switch for the welcome workflow (default: true).
WELCOME_ENABLED=

# Enables welcome event listeners; disable to pause ticket automation (default: true).
ENABLE_WELCOME_HOOK=

# Enables promo event listeners (default: true).
ENABLE_PROMO_WATCHER=

# Sends alerts to the fallback channel when true (default: true).
ENABLE_NOTIFY_FALLBACK=

# Enforces guild allow-list before startup completes (default: false).
STRICT_PROBE=

# Soft limit on search results per query (default: 25).
SEARCH_RESULTS_SOFT_CAP=

# Derived from ENV_NAME; controls watchdog heartbeat cadence (defaults: 360 prod / 60 non-prod).
WATCHDOG_CHECK_SEC=

# Stall threshold derived from the heartbeat cadence (default: keepalive*3+30).
WATCHDOG_STALL_SEC=

# Disconnect grace period; falls back to the stall threshold.
WATCHDOG_DISCONNECT_GRACE_SEC=

# Legacy alias for WATCHDOG_CHECK_SEC; logs a warning when used.
KEEPALIVE_INTERVAL_SEC=

# UTC time for the Daily Recruiter Update scheduler (default: 09:30).
REPORT_DAILY_POST_TIME=

# TTL for cached clan tags (default: 3600).
CLAN_TAGS_CACHE_TTL_SEC=

# Age threshold for cleanup jobs (default: 72).
CLEANUP_AGE_HOURS=

# External base URL for /emoji-pad; falls back to RENDER_EXTERNAL_URL when unset.
PUBLIC_BASE_URL=

# Render.com external hostname used when PUBLIC_BASE_URL is not provided.
RENDER_EXTERNAL_URL=

# Maximum emoji payload size accepted by /emoji-pad (default: 2000000).
EMOJI_MAX_BYTES=

# Square canvas dimension for padded emoji PNGs (default: 256).
EMOJI_PAD_SIZE=

# Fraction of the canvas filled by the emoji glyph after padding (default: 0.85).
EMOJI_PAD_BOX=

# Pixel edge length used when generating clan badge attachments (default: 128).
TAG_BADGE_PX=

# Glyph fill ratio applied during clan badge attachment rendering (default: 0.90).
TAG_BADGE_BOX=

# Require padded proxy thumbnails instead of raw CDN URLs (default: true).
STRICT_EMOJI_PROXY=
